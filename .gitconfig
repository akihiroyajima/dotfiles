[user]
  name = akihiroyajima
  email = akihiroyazima@gmail.com
[core]
  excludesfile = ~/.gitignore_global
  editor = vim
[merge]
  tool = p4merge
[mergetool]
  keepBackUp = false
[mergetool "p4merge"]
  cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  path = p4merge
  keepTemporaries = false
  trustExitCode = false
[diff]
  tool = p4merge
[difftool "p4merge"]
  cmd = /Applications/P4V/p4merge.app/Contents/Resources/launchp4merge "\"$REMOTE\"" "\"$LOCAL\""
[alias]
  ad = add
  br = branch
  ci = commit
  co = checkout
  ft = fetch
  pl = pull
  ps = push
  sh = show
  st = status
[url "git@github.com:"]
  pushinsteadof = https://github.com/
[push]
  default = simple
